<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    
    <servlet>
        <servlet-name>createProduct</servlet-name>
        <jsp-file>/Admin/createProduct.jsp</jsp-file>
    </servlet>  
     <servlet>
        <servlet-name>FileUploadHandler</servlet-name>
        <servlet-class>com.chilyfacts.com.FileUploadHandler</servlet-class>
    </servlet>
 
 
    <servlet-mapping>
         <servlet-name>FileUploadHandler</servlet-name>
        <url-pattern>/FileUploadHandler/*</url-pattern>
    </servlet-mapping> 
    <servlet-mapping>
        <servlet-name>createProduct</servlet-name>
        <url-pattern>/Admin/AddProduct.jsp</url-pattern>
    </servlet-mapping>

</web-app>
